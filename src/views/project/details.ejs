<%- include('../layouts/head.ejs') %>
<main class="content">
  <div class="container-fluid p-0">

    <div class="mb-4 d-flex justify-content-between ">
      <!-- <h1 class="h3 my-0"><%= project.title %> </h1> -->
      <a href="/projects" class="btn light">Back To Projects</a>

    </div>



    <div class="row d-flex  align-items-stretch  ">

      <div class="col-md-6 pr-md-4">
        <img src="<%= project.image %>" class=" w-100 h-auto" alt="">
      </div>
      <div class="col-md-6 ms-auto ps-sm-5 ">

        <h1 class=" text-uppercase  mb-0"><%= project.title %> <a class="btn mt-0 mb-3 btn-link p-0 shadow-none "
            href="/projects/<%= project._id %>/edit "><i data-feather="edit"></i></a></h1>

        <div class="d-flex mb-3 align-items-center" style="font-size: 16px;">
          <%
            const statusBadge = {
              TODO: `<div class="badge bg-info my-2"><i style="width: 14px;"  class="my-0 mx-0 "
                  data-feather="clipboard"></i> Todo</div>`,
              PROGRESS: `<div class="badge bg-warning my-2"><i style="width: 14px;"  class="my-0 mx-0 "
                  data-feather="activity"></i> In Progress</div>`,
              ON_HOLD: `<div class="badge bg-danger my-2"><i style="width: 14px;"  class="my-0 mx-0 "
                  data-feather="pause-circle"></i> On Hold</div>`,
              FINISHED: `<div class="badge bg-success my-2">Finished</div>`,
            }
          %>
          <% if(project.progress >= 100) { %>
          <%- statusBadge["FINISHED"] %>
          <% } else { %>
          <%- statusBadge[project.status] %>
          <% } %>

          <% if(project.isSelected) { %>
          <span class="badge bg-primary ms-2 my-2"> <i class="my-0 mx-0 " style="width: 14px;"
              data-feather="bookmark"></i>
            Selected
          </span>
          <% } %>
        </div>
        <p class="mb-3"><%= project.description %> </p>

        <div class="mb-3 d-flex align-items-center gap-1 flex-wrap">

          <% project.stacks.map(item => { %>
          <span class=" badge  bg-primary "><%= item %> </span>
          <% }) %>

        </div>

        <ul class="list-group bg-transparent list-group-flush mb-2">
          <li class="list-group-item bg-transparent px-0 pb-4">
            <p class="mb-2 font-weight-bold">Progress <span
                class="float-end"><%= project.progress?.percentage %>%</span></p>
            <div class="progress progress-sm">
              <div class="progress-bar" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"
                style="width: <%= project.progress?.percentage %>%;">
              </div>
            </div>
          </li>
        </ul>
        <div class=" d-flex gap-2 ">
          <a href="<%= project.demo %>" class="btn btn-facebook" target="_blank">
            <i data-feather="external-link"></i>
            Demo
          </a>
          <a href="<%= project.github %>" class="btn btn-github" target="_blank">
            <i data-feather="github"></i>
            Github
          </a>
        </div>
      </div>
    </div>
  </div>


  <div class="mt-5 mb-5">
    <hr>
  </div>


  <%- include('../includes/alert.ejs') %>

  <div class="container-fluid ">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary float-end mt-n1" data-bs-toggle="modal"
      data-bs-target="#formTaskModal">
      <i data-feather="plus"></i> New task
    </button>
    <div class="mb-3">
      <h1 class="h3 d-inline align-middle">Project Tasks</h1>
      </a>
    </div>
    <div class="row">
      <!-- TODO -->
      <div class="col-12 col-lg-6 col-xl-4">
        <div class="card card-project-task">
          <div class="card-header pb-2">

            <h5 class="card-title"> <span
                class="badge bg-primary h-auto me-1 rounded-circle"><%= project?.tasks?.todo.length %> </span> Todo
            </h5>
          </div>
          <div class="card-body card-project-task-body  px-2 ">

            <% project?.tasks?.todo?.map(tsk => { %>
            <div id="tasks-backlog" style="min-height:40px;">
              <div class="card mb-3 bg-light cursor-grab border">
                <div class="card-body p-3">
                  <div class="float-end me-n2">
                    <div class="dropdown position-relative">
                      <a href="#" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false" class="">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                          stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                          class="feather feather-more-horizontal align-middle">
                          <circle cx="12" cy="12" r="1"></circle>
                          <circle cx="19" cy="12" r="1"></circle>
                          <circle cx="5" cy="12" r="1"></circle>
                        </svg>
                      </a>

                      <div class="dropdown-menu dropdown-menu-end">
                        <a class="dropdown-item" href="#" id="task-edit" data-task="<%= JSON.stringify(tsk) %>">Edit</a>
                        <a class="dropdown-item" href="#">Delete</a>
                      </div>
                    </div>
                  </div>
                  <p> <i data-feather="file-text" class="me-1 mt-n1"></i> <%= tsk.note %> </p>

                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
      <!-- End OF TODO -->
      <!-- PROGRESS -->
      <div class="col-12 col-lg-6 col-xl-4">
        <div class="card card-project-task">
          <div class="card-header pb-2">
            <h5 class="card-title">
              <span class="badge bg-warning h-auto me-1 rounded-circle"><%= project?.tasks?.progress.length %> </span>
              In
              Progress
            </h5>
          </div>
          <div class="card-body card-project-task-body  px-2 ">

            <% project?.tasks?.progress?.map(tsk => { %>
            <div id="tasks-backlog" style="min-height:40px;">
              <div class="card mb-3 bg-light cursor-grab border">
                <div class="card-body p-3">
                  <div class="float-end me-n2">
                    <div class="dropdown position-relative">
                      <a href="#" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false" class="">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                          stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                          class="feather feather-more-horizontal align-middle">
                          <circle cx="12" cy="12" r="1"></circle>
                          <circle cx="19" cy="12" r="1"></circle>
                          <circle cx="5" cy="12" r="1"></circle>
                        </svg>
                      </a>

                      <div class="dropdown-menu dropdown-menu-end">
                        <a class="dropdown-item" href="#" id="task-edit" data-task="<%= JSON.stringify(tsk) %>">Edit</a>
                        <a class="dropdown-item" href="#">Delete</a>
                      </div>
                    </div>
                  </div>
                  <p> <i data-feather="activity" class="me-1 mt-n1"></i> <%= tsk.note %> </p>
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
      <!-- End of PROGRESS -->
      <!-- DONE  -->
      <div class="col-12 col-lg-6 col-xl-4">
        <div class="card card-project-task">
          <div class="card-header pb-2">

            <h5 class="card-title "><span
                class="badge bg-success me-1 rounded-circle"><%= project?.tasks?.done.length %> </span> Done
            </h5>
          </div>
          <div class="card-body card-project-task-body  px-2 ">

            <% project?.tasks?.done?.map(tsk => { %>
            <div id="tasks-backlog" style="min-height:40px;">
              <div class="card mb-3 bg-light cursor-grab border">
                <div class="card-body p-3">
                  <div class="float-end me-n2">
                    <div class="dropdown position-relative">
                      <a href="#" data-bs-toggle="dropdown" data-bs-display="static" aria-expanded="false" class="">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none"
                          stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                          class="feather feather-more-horizontal align-middle">
                          <circle cx="12" cy="12" r="1"></circle>
                          <circle cx="19" cy="12" r="1"></circle>
                          <circle cx="5" cy="12" r="1"></circle>
                        </svg>
                      </a>
                      <div class="dropdown-menu dropdown-menu-end">
                        <a class="dropdown-item" href="#" id="task-edit" data-task="<%= JSON.stringify(tsk) %>">Edit</a>
                        <a class="dropdown-item" href="#">Delete</a>
                      </div>
                    </div>
                  </div>
                  <p> <i data-feather="check-square" class="me-1 mt-n1"></i> <%= tsk.note %> </p>

                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
      <!-- End of Done -->
    </div>
  </div>
</main>


<% const validationErr = flashError.find(x => x.name == "Validation")  %>
<!-- Modal -->
<div class="modal fade" data-bs-backdrop="static" data-error="<%= validationErr %>" id="formTaskModal" tabindex="-1"
  aria-labelledby="formTaskModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="formTaskModalLabel">Create Modal</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">


        <form action="/tasks" id="project-task-form" method="post">
          <input type="hidden" name="projectId" value="<%= project._id %>">
          <input type="hidden" name="_method" value="POST">
          <input type="hidden" name="_render" value="project/details">
          <div class="mb-3">
            <label for="note" class="form-label">Note</label>
            <textarea class="form-control" id="note" name="note" rows="3"></textarea>
            <% if(validationErr && validationErr?.validation?.note) {  %>
            <small class="text-danger"> <%= validationErr?.validation?.note?.message[0] %></small>
            <% } %>
          </div>
          <div class="mb-3">
            <select class="form-select" name="status" aria-label="status">
              <option selected value="">Select Status</option>
              <option value="TODO">Todo</option>
              <option value="PROGRESS">In Proggress</option>
              <option value="DONE">Done</option>
            </select>
            <% if(validationErr && validationErr?.validation?.status) {  %>
            <small class="text-danger"> <%= validationErr?.validation?.status?.message[0] %></small>
            <% } %>
          </div>
          <div class="mb-3">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
          </div>

        </form>
      </div>

    </div>
  </div>
</div>

<%- include('../layouts/end.ejs') %>